<h1>Listing devices</h1>

<table>
  <tr>
    <th>Nic</th>
    <th>Perc</th>
    <th>Delay</th>
    <th>Last ch</th>
    <th>Locat</th>
    <th>Ip</th>
    <th>Type</th>
    <th>Uptime</th>
    <th>Mac</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @devices.each do |device| %>
  <tr>
    <td><%= device.nic %></td>
    <td><%= device.perc %></td>
    <td><%= device.delay %></td>
    <td><%= device.last_ch %></td>
    <td><%= device.locat %></td>
    <td><%= device.ip %></td>
    <td><%= device.type %></td>
    <td><%= device.uptime %></td>
    <td><%= device.mac %></td>
    <td><%= link_to 'Show', device %></td>
    <td><%= link_to 'Edit', edit_device_path(device) %></td>
    <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

